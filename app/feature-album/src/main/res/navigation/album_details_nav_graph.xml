<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_nav_graph"
    app:startDestination="@id/album_list_fragment">

    <fragment
        android:id="@+id/album_list_fragment"
        android:name="com.lyh.albumexplorer.feature.album.list.AlbumListFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/show_album_detail"
            app:destination="@id/album_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/album_detail_fragment"
        android:name="com.lyh.albumexplorer.feature.album.detail.AlbumDetailFragment"
        android:label="@string/album"
        tools:layout="@layout/fragment_album_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>